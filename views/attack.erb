<!DOCTYPE html>
<html>
<head>
	<title>Attack</title>
    <link href="<%= url('/style_ready.css') %>" rel="stylesheet" type="text/css">
    <link rel="stylesheet" media="screen" href="https://fontlibrary.org/face/press-start-2p" type="text/css"/>
</head>
<body>
    <div class="whole-container-ready">
        <div id="hpbar-time-container-ready">
            <div class="name-hp-bar1-ready">
                <%= $game.player_1.choice.upcase %> / <%= $game.player_1.hit_points %>
            </div>
            <div id="timer">
            </div>
            <div class="name-hp-bar2-ready">
                <%= $game.player_2.hit_points %> \ <%= $game.player_2.choice.upcase %>
            </div>
        </div>
            <div class="selected-characters-wrapper-ready">
                <div class="p1-full-box-ready">
                    <%if $game.player_1.choice == "Peter"%>
                        <img style="max-width: 250px; max-height: 250px;" src="images/Peter.png">
                        <%elsif $game.player_1.choice == "Chicken"%>
                        <img style="max-width: 250px; max-height: 250px;" src="images/Chicken.png">
                        <%else%>
                            Error
                    <%end%>
                </div>
                <div class="p2-full-box-ready">
                    <%if $game.player_2.choice == "Peter"%>
                        <img style="max-width: 250px; max-height: 250px;" src="images/Peter.png">
                    <%elsif $game.player_2.choice == "Chicken"%>
                        <img style="max-width: 250px; max-height: 250px;" src="images/Chicken.png">
                    <%else%>
                        Error
                    <%end%>
                </div>
            </div>
            <div class="turn-ready">
                
                <%=$game.current_turn.choice.upcase%>'S TURN !!!
            </div>
            <div class="button-container-ready">
                <form action=/switchturns method="post">
                    <div class="attack-button-ready">
                        <%if $game.current_turn == $game.player_1%>
                            <%$game.player_2.receive_damage_a1%>
                        <%elsif $game.current_turn == $game.player_2%>
                            <%$game.player_1.receive_damage_a1%>
                        <%end%>
                        
                        <%if $game.current_turn == $game.player_1 && $game.player_1.choice == "Peter" %>
                            <input class="button_view_one-ready-1" type="submit" name="attack_type" value="PUNCH">
                        <%elsif $game.current_turn == $game.player_1 && $game.player_1.choice == "Chicken" %>
                            <input class="button_view_one-ready-1" type="submit" name="attack_type" value="PUNCH">
                        <%elsif $game.current_turn == $game.player_2 && $game.player_2.choice == "Peter" %>
                            <input class="button_view_one-ready-1" type="submit" name="attack_type" value="PUNCH">
                        <%elsif $game.current_turn == $game.player_2 && $game.player_2.choice == "Chicken" %>
                            <input class="button_view_one-ready-1" type="submit" name="attack_type" value="PUNCH">
                        <%end%>
                    </div>
                </form>
            </div>
            <div class="button-container-ready">
                <form action=/switchturns method="post">
                    <div class="attack-button-ready">
                    <%if $game.current_turn == $game.player_1 && $game.player_1.choice == "Peter" %>
                        <input class="button_view_one-ready-2" type="submit" name="attack_type" value="KICK">
                    <%elsif $game.current_turn == $game.player_1 && $game.player_1.choice == "Chicken" %>
                        <input class="button_view_one-ready-2" type="submit" name="attack_type" value="KICK">
                    <%elsif $game.current_turn == $game.player_2 && $game.player_2.choice == "Peter" %>
                        <input class="button_view_one-ready-2" type="submit" name="attack_type" value="KICK">
                    <%elsif $game.current_turn == $game.player_2 && $game.player_2.choice == "Chicken" %>
                        <input class="button_view_one-ready-2" type="submit" name="attack_type" value="KICK">
                    <%end%>
                    </div>
                </form>
            </div>
            <div class="button-container-ready">
                <form action=/switchturns method="post">
                    <div class="attack-button-ready">
                    <%if $game.current_turn == $game.player_1 && $game.player_1.choice == "Peter" %>
                        <input class="button_view_one-ready-3" type="submit" name="attack_type" value="LAUGH">
                    <%elsif $game.current_turn == $game.player_1 && $game.player_1.choice == "Chicken" %>
                        <input class="button_view_one-ready-3" type="submit" name="attack_type" value="DIRTY LOOK">
                    <%elsif $game.current_turn == $game.player_2 && $game.player_2.choice == "Peter" %>
                        <input class="button_view_one-ready-3" type="submit" name="attack_type" value="LAUGH">
                    <%elsif $game.current_turn == $game.player_2 && $game.player_2.choice == "Chicken" %>
                        <input class="button_view_one-ready-3" type="submit" name="attack_type" value="DIRTY LOOK">
                    <%end%>
                    </div>
                </form>
            </div>

        <script>
        let timeLeft = 99;
        let elem = document.getElementById('timer');
        let timerId = setInterval(countdown, 1000);

         function countdown() {
            if (timeLeft == -1) {
                clearTimeout(timerId);
                doSomething();
            } else {
                elem.innerHTML = timeLeft;
                timeLeft--;
            }
        }

         function doSomething() {
            alert("Hi");
        }
        </script>
    </div>

</body>

</html>